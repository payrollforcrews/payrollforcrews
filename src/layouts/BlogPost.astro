---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, heroAlt } =
  Astro.props as Props & { heroAlt?: string };

// Alt text: use heroAlt if present, otherwise fall back to the title.
const computedHeroAlt =
  typeof heroAlt === 'string' && heroAlt.trim().length > 0
    ? heroAlt.trim()
    : `${title}.`;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      .toc {
        margin: 1.5rem 0 2rem 0;
        padding: 1rem 1.25rem;
        border-radius: 8px;
        background-color: rgba(var(--gray-light), 0.4);
        border: 1px solid rgba(var(--gray-light), 0.9);
      }
      .toc__title {
        margin: 0 0 0.75rem 0;
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
        color: rgb(var(--gray));
      }
      .toc__list {
        margin: 0;
        padding-left: 1.25rem;
        list-style: disc;
      }
      .toc-item {
        margin: 0.25rem 0;
        line-height: 1.3;
      }
      .toc-item a {
        text-decoration: none;
        font-size: 0.95rem;
        color: rgb(var(--gray-dark));
      }
      .toc-item a:hover {
        text-decoration: underline;
      }

      .newsletter-cta {
        margin-top: 3rem;
        padding: 1.5rem 1.25rem;
        border-radius: 12px;
        background-color: rgba(var(--gray-light), 0.6);
        border: 1px solid rgba(var(--gray-light), 0.9);
      }

      .newsletter-cta h2 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-size: 1.25rem;
      }

      .newsletter-cta p {
        margin-bottom: 1rem;
      }

      .newsletter-cta__button {
        display: inline-block;
        padding: 0.6rem 1.5rem;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 700;
        border: none;
        background-color: var(--accent);
        color: white;
      }

      .newsletter-cta__button:hover {
        background-color: var(--accent-dark);
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {heroImage && (
            <Image
              width={1020}
              height={510}
              src={heroImage}
              alt={computedHeroAlt}
            />
          )}
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>

          <nav class="toc" aria-label="Table of contents">
            <p class="toc__title">In this guide</p>
            <ul class="toc__list" id="toc-list"></ul>
          </nav>

          {/* This is where the markdown content goes */}
          <slot />

          <section class="newsletter-cta">
            <h2>Get new crew payroll guides in your inbox</h2>
            <p>
              Short, practical emails about payroll, time tracking, and HR for small crews. No spam, no fluff.
            </p>
            <a
              href="https://payrollforcrews.substack.com"
              target="_blank"
              rel="noopener noreferrer"
              class="newsletter-cta__button"
            >
              Join the newsletter
            </a>
          </section>
        </div>
      </article>
    </main>
    <Footer />

    <script>
      if (typeof window !== 'undefined') {
        (function () {
          function slugify(text) {
            return text
              .toLowerCase()
              .replace(/[^a-z0-9]+/g, '-')
              .replace(/(^-|-$)/g, '');
          }

          window.addEventListener('DOMContentLoaded', function () {
            var article = document.querySelector('article');
            var tocList = document.getElementById('toc-list');
            var tocContainer = document.querySelector('.toc');

            if (!article || !tocList || !tocContainer) {
              return;
            }

            // Only grab H2 headings for the ToC
            var headingNodes = article.querySelectorAll('h2');
            var items = [];

            headingNodes.forEach(function (heading) {
              var text = heading.textContent || '';
              if (!text.trim()) {
                return;
              }

              if (!heading.id) {
                heading.id = slugify(text);
              }

              items.push({
                text: text.trim(),
                id: heading.id
              });
            });

            if (!items.length) {
              tocContainer.style.display = 'none';
              return;
            }

            // Limit to first 10 items so it never gets crazy long
            items.slice(0, 10).forEach(function (item) {
              var li = document.createElement('li');
              li.className = 'toc-item';

              var a = document.createElement('a');
              a.href = '#' + item.id;
              a.textContent = item.text;

              li.appendChild(a);
              tocList.appendChild(li);
            });
          });
        })();
      }
    </script>
  </body>
</html>
