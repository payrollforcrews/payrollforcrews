---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';

type Props = CollectionEntry<'blog'>['data'];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  heroAlt,
} = Astro.props as Props;

// Default alt is the title. heroAlt is an optional manual override if you ever want it.
const titleAltBase =
  typeof title === 'string' && title.trim().length > 0
    ? title.trim()
    : 'Hero image for this article';

const computedHeroAlt =
  typeof heroAlt === 'string' && heroAlt.trim().length > 0
    ? heroAlt.trim()
    : titleAltBase;

// Normalize heroImage (string path or Astro image metadata) to heroSrc
let heroSrc: string | null = null;
let heroWidth: number | undefined;
let heroHeight: number | undefined;

if (heroImage) {
  if (typeof heroImage === 'string') {
    heroSrc = heroImage;
  } else if (typeof heroImage === 'object' && 'src' in heroImage) {
    heroSrc = heroImage.src as string;

    if ('width' in heroImage && 'height' in heroImage) {
      heroWidth = heroImage.width as number;
      heroHeight = heroImage.height as number;
    }
  }
}
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: calc(100% - 2em);
        max-width: 100%;
        margin: 0;
      }
      .hero-image {
        width: 100%;
      }
      .hero-image img {
        display: block;
        margin: 0 auto;
        border-radius: 12px;
        box-shadow: var(--box-shadow);
      }
      .prose {
        width: 720px;
        max-width: calc(100% - 2em);
        margin: auto;
        padding: 1em;
        color: rgb(var(--gray-dark));
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }

      .newsletter-cta {
        margin-top: 3rem;
        padding: 1.5rem 1.25rem;
        border-radius: 12px;
        background-color: rgba(var(--gray-light), 0.6);
        border: 1px solid rgba(var(--gray-light), 0.9);
      }

      .newsletter-cta h2 {
        margin-top: 0;
        margin-bottom: 0.5rem;
        font-size: 1.25rem;
      }

      .newsletter-cta p {
        margin-bottom: 1rem;
      }

      .newsletter-cta__button {
        display: inline-block;
        padding: 0.6rem 1.5rem;
        border-radius: 999px;
        text-decoration: none;
        font-weight: 700;
        border: none;
        background-color: var(--accent);
        color: white;
      }

      .newsletter-cta__button:hover {
        background-color: var(--accent-dark);
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div class="hero-image">
          {heroSrc && (
            <img
              src={heroSrc}
              alt={computedHeroAlt}
              loading="lazy"
              decoding="async"
              width={heroWidth}
              height={heroHeight}
            />
          )}
        </div>
        <div class="prose">
          <div class="title">
            <div class="date">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="last-updated-on">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1>{title}</h1>
            <hr />
          </div>

          {/* This is where the markdown content goes */}
          <slot />

          <section class="newsletter-cta">
            <h2>Get new crew payroll guides in your inbox</h2>
            <p>
              Short, practical emails about payroll, time tracking, and HR for small crews. No spam, no fluff.
            </p>
            <a
              href="https://payrollforcrews.substack.com"
              target="_blank"
              rel="noopener noreferrer"
              class="newsletter-cta__button"
            >
              Join the newsletter
            </a>
          </section>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
