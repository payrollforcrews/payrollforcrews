---
const navLinks = [
  { href: "/", label: "Home", external: false },
  { href: "/blog", label: "Blog", external: false },
  { href: "/about", label: "About", external: false },
  {
    href: "https://payrollforcrews.substack.com/",
    label: "Newsletter",
    external: true,
  },
];

const currentPath = Astro.url.pathname;
---

<header>
  <nav>
    <h2>
      <a href="/">Payroll for Crews</a>
    </h2>
    <div class="internal-links">
      {
        navLinks.map((link) => (
          <a
            href={link.href}
            class:list={{
              active:
                !link.external &&
                (
                  link.href === "/"
                    ? currentPath === "/"
                    : currentPath.startsWith(link.href)
                ),
            }}
            target={link.external ? "_blank" : undefined}
            rel={link.external ? "noopener noreferrer" : undefined}
          >
            {link.label}
          </a>
        ))
      }
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: #ffffff;
    box-shadow: 0 2px 8px rgba(var(--black), 0.05);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 960px;
    margin: 0 auto;
  }

  h2 {
    margin: 0;
    font-size: 1rem;
  }

  h2 a {
    text-decoration: none;
    color: rgb(var(--black));
  }

  .internal-links {
    display: flex;
    gap: 0.5em;
  }

  .internal-links a {
    padding: 1em 0.5em;
    color: rgb(var(--black));
    border-bottom: 4px solid transparent;
    text-decoration: none;
    font-size: 0.95rem;
  }

  .internal-links a.active {
    border-bottom-color: var(--accent);
    font-weight: 600;
  }

  @media (max-width: 720px) {
    nav {
      flex-direction: column;
      align-items: flex-start;
    }

    .internal-links {
      width: 100%;
      justify-content: flex-start;
      flex-wrap: wrap;
    }
  }
</style>
